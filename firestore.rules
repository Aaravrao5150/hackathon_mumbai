rules_version='2';
service cloud.firestore {
 match /databases/{db}/documents {

  match /attendance/{id}{
    allow create,read: if true;
  }

  match /sessions/{id}{
    allow read;
    allow write: if request.auth.token.email=='teacher@demo.com';
  }

  match /students/{id}{
    allow read;
    allow write: if request.auth.token.email=='teacher@demo.com';
  }
 }
}
